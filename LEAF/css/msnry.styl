#faq 
	text-align center
	margin 0 auto
	padding-bottom 10px
#faq .qcards 
	width 80%
	// border-style solid
	// border-width 1px
	// border-radius 10px
	padding 10px
	margin 0 auto

#faq .flip-content
	position relative
	width 80%
	height auto
	margin auto auto
	padding 10px
	padding-right 25px
	top: 50%;
	transform: translateY(-50%)

#faq input[type=text]
	height 45px

#faq button
	background-image url('../img/Leaf-y/flecha-azul.png')
	background-size contain
	border-width 0
	padding 0
	height 45px
	width 45px

#faq img
	height 100%
	width auto

#faq #caja 
	width 80%
	margin 0 auto

#faq .back-flip
	font-size 0.75em
	text-align justify

#faq .cerrarq
	height 30px
	width 30px
	position absolute
	top 0
	right 0
	cursor pointer
	

	